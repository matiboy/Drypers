<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sharing_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sharing_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tri_indic_sharing_Top"
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dip"
            android:background="@drawable/tri_indic" />

        <LinearLayout
            android:id="@+id/sharing_r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dip"
            android:background="@drawable/gradient"
            android:orientation="vertical"
            android:padding="10dip" >

            <Button
                android:id="@+id/babblelike_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abtn_likebabble" />

            <Button
                android:id="@+id/set_ringtone_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/set_ringtone_selector" />

            <Button
                android:id="@+id/sharing_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/share_fb_selector" />

            <Button
                android:id="@+id/sharing_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/share_email_selector" />

            <Button
                android:id="@+id/sharing_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/share_twitter_selector" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tri_indic_sharing_Bottom"
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dip"
            android:background="@drawable/tri_indic"
            android:rotation="180" />

    </LinearLayout>

</LinearLayout>